<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adler.javafx.primeirofx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="lblText">
      <font>
         <Font name="Calibri Bold Italic" size="21.0" />
      </font></Label>
  <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#onButton" text="Aperte" textAlignment="CENTER" textFill="RED">
      <font>
         <Font name="Candara Bold Italic" size="19.0" />
      </font>
      <effect>
         <Glow level="0.25" />
      </effect></Button>
</VBox>
